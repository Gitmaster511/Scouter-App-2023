<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:background="@drawable/top_rect"
        android:bottomLeftRadius="40dp"
        android:bottomRightRadius="40dp"
        android:topLeftRadius="40dp"
        android:topRightRadius="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="343dp"
        android:layout_height="94dp"
        android:layout_marginStart="189dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="189dp"
        android:fontFamily="@font/avenirbold"
        android:text="@string/end_game"
        android:textColor="@color/white"
        android:textSize="70sp"
        app:fontFamily="@font/avenirbold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:layout_width="260dp"
        android:layout_height="85dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="127dp"
        android:background="@drawable/smaller_rect_field"
        android:buttonTint="#ffffff"
        android:fontFamily="@font/avenir"
        android:text="@string/attempted"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:fontFamily="@font/avenir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:layout_width="260dp"
        android:layout_height="85dp"
        android:layout_marginTop="127dp"

        android:layout_marginEnd="26dp"
        android:background="@drawable/smaller_rect_field"
        android:buttonTint="#ffffff"
        android:fontFamily="@font/avenir"
        android:text="@string/docked"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:fontFamily="@font/avenir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:layout_width="260dp"
        android:layout_height="85dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="249dp"
        android:background="@drawable/smaller_rect_field"
        android:buttonTint="#ffffff"
        android:fontFamily="@font/avenir"
        android:text="@string/engaged"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:fontFamily="@font/avenir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/gave_assistance"
        android:layout_width="457dp"
        android:layout_height="85dp"
        android:layout_marginTop="359dp"
        android:background="@drawable/smaller_rect_field"

        android:buttonTint="#ffffff"
        android:fontFamily="@font/avenir"
        android:text="@string/gave_assistance"
        android:textColor="@color/white"
        android:textSize="45sp"
        app:fontFamily="@font/avenir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/solo_climb"
        android:layout_width="260dp"
        android:layout_height="85dp"
        android:layout_marginTop="249dp"
        android:layout_marginEnd="26dp"
        android:background="@drawable/smaller_rect_field"
        android:buttonTint="#ffffff"
        android:fontFamily="@font/avenir"
        android:text="@string/solo_climb"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:fontFamily="@font/avenir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <CheckBox
        android:id="@+id/parked"
        android:layout_width="187dp"
        android:layout_height="66dp"
        android:layout_marginTop="583dp"
        android:background="@drawable/smaller_rect_field"
        android:buttonTint="#ffffff"
        android:fontFamily="@font/avenir"
        android:text="@string/parked"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:fontFamily="@font/avenir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="457dp"
        android:layout_height="85dp"
        android:layout_marginTop="469dp"
        android:background="@drawable/smaller_rect_field"
        android:buttonTint="#ffffff"
        android:fontFamily="@font/avenir"
        android:text="@string/received_assistance"
        android:textColor="@color/white"
        android:textSize="45sp"
        app:fontFamily="@font/avenir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:background="@drawable/bottom_rect"
        android:bottomLeftRadius="40dp"
        android:bottomRightRadius="40dp"
        android:topLeftRadius="40dp"
        android:topRightRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="173dp"
        android:layout_height="71dp"
        android:layout_marginStart="189dp"
        android:layout_marginEnd="189dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/avenir"
        android:text="@string/page_4"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:fontFamily="@font/avenir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.18"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="-91dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="-3dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="-1dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="654dp" />

    <Button
        android:id="@+id/Forward_page_4"
        android:layout_width="46dp"
        android:layout_height="49dp"
        android:layout_marginEnd="184dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/triangleforward"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/Backward_page_4"
        android:layout_width="46dp"
        android:layout_height="49dp"
        android:layout_marginStart="136dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/triangleforward"
        android:rotation="180"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Chronometer
        android:id="@+id/endgameStopwatch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="662dp"
        android:layout_marginBottom="196dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/start"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginStart="208dp"
        android:layout_marginBottom="144dp"
        android:backgroundTint="#00FF38"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/start"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/reset"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginStart="328dp"
        android:layout_marginBottom="146dp"
        android:backgroundTint="#FF0000"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/reset"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

