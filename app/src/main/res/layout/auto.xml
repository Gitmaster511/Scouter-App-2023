<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Top Bar  -->

    <!-- CheckBoxes -->

    <View
        android:id="@+id/view"
        android:layout_width="422dp"
        android:layout_height="155dp"
        android:layout_marginStart="189dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="189dp"
        android:background="@drawable/smaller_rect_field"
        android:backgroundTint="#ff0303"
        android:bottomLeftRadius="40dp"
        android:bottomRightRadius="40dp"
        android:topLeftRadius="40dp"
        android:topRightRadius="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="114dp"
        android:layout_height="70dp"
        android:layout_marginStart="189dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="189dp"
        android:text="@string/titleauto"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Checkboxes -->

    <CheckBox
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="200dp"
        android:background="#0303FF"
        android:buttonTint="#ffffff"
        android:text="@string/left_community"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </CheckBox>


    <!-- Bottom Navigation -->

    <CheckBox
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="32dp"
        android:background="#0303FF"
        android:buttonTint="#ffffff"
        android:text="@string/docked_engaged"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </CheckBox>

    <CheckBox
        android:layout_width="276dp"
        android:layout_height="90dp"
        android:background="#0303FF"
        android:buttonTint="#ffffff"
        android:text="Assisted"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="309dp"
        tools:layout_editor_absoluteY="669dp" />

    <View
        android:id="@+id/view6"
        android:layout_width="601dp"
        android:layout_height="295dp"
        android:layout_marginStart="189dp"
        android:layout_marginTop="316dp"
        android:layout_marginEnd="189dp"
        android:background="@drawable/game_field"
        android:bottomLeftRadius="40dp"
        android:bottomRightRadius="40dp"
        android:topLeftRadius="40dp"
        android:topRightRadius="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view3"
        android:layout_width="360dp"
        android:layout_height="120dp"
        android:layout_marginStart="189dp"
        android:layout_marginEnd="189dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/smaller_rect_field"
        android:backgroundTint="#ff0303"
        android:bottomLeftRadius="40dp"
        android:bottomRightRadius="40dp"
        android:topLeftRadius="40dp"
        android:topRightRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="173dp"
        android:layout_height="71dp"
        android:layout_marginStart="189dp"
        android:layout_marginEnd="189dp"
        android:layout_marginBottom="24dp"
        android:text="@string/page_2"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

