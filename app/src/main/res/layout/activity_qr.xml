<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="134dp"
    tools:layout_editor_absoluteY="1dp">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:background="@drawable/top_rect"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="-4dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenirbold"
        android:text="QR"
        android:textColor="#FFFFFF"
        android:textSize="75sp"
        app:fontFamily="@font/avenirbold"
        tools:layout_editor_absoluteX="251dp"
        tools:layout_editor_absoluteY="16dp" />

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:background="@drawable/bottom_rect"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="867dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenir"
        android:text="Page 6"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        app:fontFamily="@font/avenir"
        tools:layout_editor_absoluteX="223dp"
        tools:layout_editor_absoluteY="878dp" />

    <ImageView
        android:id="@+id/view9"
        android:layout_width="466dp"
        android:layout_height="471dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="222dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="269dp"
        android:background="@drawable/smaller_rect_field"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Backward_page_5"

        android:layout_width="55dp"
        android:layout_height="65dp"
        android:layout_marginStart="148dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/triangleforward"
        android:rotation="180"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="223dp"
        android:layout_height="120dp"
        android:layout_marginStart="197dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="198dp"
        android:layout_marginBottom="26dp"
        android:text="Generate"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/view4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view9"
        app:layout_constraintVertical_bias="0.2" />


</androidx.constraintlayout.widget.ConstraintLayout>