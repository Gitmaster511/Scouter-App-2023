<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/db03c090f3453aa392e368f65667b6d9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/name_box"
        android:layout_width="411dp"
        android:layout_height="124dp"
        android:layout_marginStart="91dp"
        android:layout_marginTop="149dp"
        android:background="@drawable/red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/student_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="121dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="121dp"
        android:fontFamily="@font/avenir"
        android:text="Scouting ID"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:textAllCaps="true"
        app:fontFamily="@font/avenir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="137dp"
        android:background="@drawable/top_rect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Main -->

    <!-- Match Number -->

    <View
        android:id="@+id/match_number_box"
        android:layout_width="411dp"
        android:layout_height="124dp"
        android:layout_marginStart="91dp"
        android:layout_marginTop="292dp"
        android:layout_marginEnd="91dp"
        android:background="@drawable/red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/name"
        android:layout_width="370dp"
        android:layout_height="63dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="204dp"
        android:layout_marginEnd="15dp"
        android:hint="Ex: 1"
        android:inputType="number"
        android:textColorHint="@color/white"
        android:textSize="22sp"
        android:background="@drawable/smaller_rect_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/match_number_input"
        android:layout_width="333dp"
        android:layout_height="61dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="352dp"
        android:layout_marginEnd="137dp"
        android:autofillHints="Ex: 1"
        android:fontFamily="@font/avenirlight"
        android:hint="@string/ex_1"
        android:inputType="number"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        app:fontFamily="@font/avenirlight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/match_number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="121dp"
        android:layout_marginTop="292dp"
        android:layout_marginEnd="121dp"
        android:fontFamily="@font/avenir"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="@string/match_number"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        app:fontFamily="@font/avenir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/team_number_box"
        android:layout_width="411dp"
        android:layout_height="124dp"
        android:layout_marginStart="91dp"
        android:layout_marginTop="432dp"
        android:layout_marginEnd="91dp"
        android:background="@drawable/red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/team_number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="432dp"
        android:layout_marginEnd="141dp"
        android:fontFamily="@font/avenir"
        android:text="@string/team_number"
        android:textColor="#FFFFFF"
        android:textSize="45sp"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:textAllCaps="true"
        app:fontFamily="@font/avenir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/team_number_input"
        android:layout_width="330dp"
        android:layout_height="66dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="488dp"
        android:layout_marginEnd="137dp"
        android:autofillHints="Ex: 75"
        android:fontFamily="@font/avenirlight"
        android:hint="@string/ex_75"
        android:inputType="number"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        app:fontFamily="@font/avenirlight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="96dp"
        android:fontFamily="@font/avenirbold"
        android:text="@string/scouter_app"
        android:textColor="#FFFFFF"
        android:textSize="75sp"
        app:fontFamily="@font/avenirbold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- Team Number -->

    <!-- Driver Station -->


    <!-- Bottom -->





    <View
        android:id="@+id/Page_1"
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/bottom_rect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Page_1_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="222dp"
        android:layout_marginEnd="223dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/avenir"
        android:text="@string/page_1"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        app:fontFamily="@font/avenir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Forward_page_1"
        android:layout_width="55dp"
        android:layout_height="65dp"
        android:layout_marginEnd="144dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/triangleforward"
        app:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Driver Station -->


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="225dp"
        android:layout_marginTop="564dp"
        android:layout_marginEnd="225dp"
        android:fontFamily="@font/avenirbold"
        android:text="@string/alliance"
        android:textColor="#C40818"
        android:textSize="45sp"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:textAllCaps="true"
        app:fontFamily="@font/avenirbold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/driverStationButton"
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="90dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/Left"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/left_rect"
            android:fontFamily="@font/avenirbold"
            android:text="@string/left"
            android:textColor="#FFFFFF"
            android:textSize="38sp"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            android:textAllCaps="true"
            app:fontFamily="@font/avenirbold" />

        <RadioButton
            android:id="@+id/Middle"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/left_rect"
            android:fontFamily="@font/avenirbold"
            android:text="@string/middle"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            android:textAllCaps="true"
            app:fontFamily="@font/avenirbold" />

        <RadioButton
            android:id="@+id/Right"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/left_rect"
            android:fontFamily="@font/avenirbold"
            android:text="@string/right"
            android:textColor="#FFFFFF"
            android:textSize="38sp"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            android:textAllCaps="true"
            app:fontFamily="@font/avenirbold" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/Alliance"
        android:layout_width="569dp"
        android:layout_height="70dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="19dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:ignore="MissingConstraints">

        <RadioButton
            android:id="@+id/Red"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/left_rect"
            android:backgroundTint="#FF0000"
            android:fontFamily="@font/avenirbold"
            android:text="@string/red"
            android:textColor="#FFFFFF"
            android:textSize="50sp"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            android:textAllCaps="true"
            app:fontFamily="@font/avenirbold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioButton
            android:id="@+id/Blue"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/left_rect"
            android:backgroundTint="#0000FF"
            android:fontFamily="@font/avenirbold"
            android:text="@string/blue"
            android:textColor="#FFFFFF"
            android:textSize="50sp"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            android:textAllCaps="true"
            app:fontFamily="@font/avenirbold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="165dp"
        android:layout_marginEnd="165dp"
        android:layout_marginBottom="203dp"

        android:text="Robot Position"
        android:textColor="#C40818"
        android:textSize="45sp"
        app:fontFamily="@font/avenirbold"
        android:fontFamily="@font/avenirbold"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />






</androidx.constraintlayout.widget.ConstraintLayout>