        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="870dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="@drawable/smaller_rect_field"
        android:text="Disabled"
        android:textColor="@color/white"
        android:textSize="40dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="391dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="300dp"
        android:layout_height="102dp"
        android:background="@drawable/red"
        android:text="Disqualified"
        android:textColor="@color/white"
        android:textSize="40dp"
        tools:layout_editor_absoluteX="300dp"
        tools:layout_editor_absoluteY="389dp" />

    <Switch
        android:id="@+id/switch1"
        android:background="@drawable/smaller_rect_field"
        android:layout_width="123dp"
        android:layout_height="70dp"
        android:textColor="@color/white"

        android:text="Win?"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="254dp"
        tools:layout_editor_absoluteY="752dp" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Notes: "
        android:textSize="30dp"
        tools:layout_editor_absoluteX="197dp"
        tools:layout_editor_absoluteY="644dp" />

    <SeekBar
        android:id="@+id/seekBar2"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="599dp"
        android:background="@drawable/smaller_rect_field"
        android:layout_height="151dp"
        android:max="5"
        android:progress="3"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="493dp" />

