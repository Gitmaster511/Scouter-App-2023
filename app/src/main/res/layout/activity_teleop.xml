        android:background="@drawable/smaller_rect_field"
        android:text="@string/cube_pickup"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/Station2"
        android:layout_width="150dp"
        android:layout_height="97dp"
        android:layout_marginTop="285dp"
        android:layout_marginEnd="224dp"
        android:background="@drawable/smaller_rect_field"
        android:buttonTint="#ffffff"
        android:text="@string/station"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="94dp"

        android:background="@drawable/bottom_rect"


        android:topLeftRadius="40dp"
        android:topRightRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="173dp"
        android:layout_height="71dp"
        android:layout_marginStart="189dp"
        android:layout_marginEnd="189dp"
        android:layout_marginBottom="10dp"
        android:text="@string/page_2"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent" />


    <View
        android:id="@+id/view8"
        android:layout_width="match_parent"
        android:layout_height="277dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/gray_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="716dp"
        android:contentDescription="@string/greyed_our_arrow"
        android:rotation="-90"
        app:layout_constraintStart_toStartOf="parent"
